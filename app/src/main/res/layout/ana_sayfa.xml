<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/siyah"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AnaSayfa">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/oligark_logo">
        </ImageView>

        </LinearLayout>


        <ImageView
            android:id="@+id/teslimat_bekleyen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/teslimat_bekleyen"></ImageView>


        <ImageView
            android:id="@+id/istekler"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bekleyen_arac_icon"></ImageView>



        <ImageView
            android:id="@+id/yeni_arac_kayit_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yeni_arac_icon"></ImageView>

    </LinearLayout>



    <ListView
        android:divider="@android:color/transparent"
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>